Name: ILDF
Details: The Inweb Language Definition File format
Extension: .ildf
Whole Line Comment: #

String Literal: "\""
String Literal Escape: \

keyword unquoted of !element

colouring {
	runs of !identifier {
		prefix ! => !element
		keyword of !element => !element
	}
	runs of unquoted {
		instances of "=>" {
			=> !reserved
		}
		instances of "{" {
			=> !reserved
		}
		instances of "}" {
			=> !reserved
		}
	}
}
